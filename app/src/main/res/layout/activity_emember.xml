<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/segment_layout"
        android:gravity="center"
        android:background="@color/colorPrimary"
        android:orientation="vertical">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="-30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="20dp"
            android:background="@drawable/border_rounded_white_fifteen">


        <LinearLayout
                android:id="@+id/containerVip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_rounded_colorprimary_ten"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:padding="25dp">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/white"
                      android:textStyle="bold"
                      android:layout_marginRight="5dp"
                      android:text="VIP MEMBER"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/containerPrivilege"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_rounded_colordarkprimary_ten"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:padding="25dp">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/white"
                      android:textStyle="bold"
                      android:layout_marginRight="5dp"
                      android:text="PRIVILEGE MEMBER"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
