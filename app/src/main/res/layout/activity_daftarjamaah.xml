<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/toolbar"
            android:id="@+id/toolbar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <FrameLayout
                android:id="@+id/layout_input"
                android:layout_below="@id/toolbar"
                android:layout_marginTop="50dp"
                android:layout_marginHorizontal="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:padding="10dp"
                android:layout_centerHorizontal="true"
                android:clipToPadding="false"
                android:elevation="6dp">
            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    app:cardCornerRadius="10dp"
                    android:focusable="true"
                    android:focusedByDefault="false"
                    android:focusableInTouchMode="true">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingVertical="20dp"
                        android:paddingHorizontal="20dp"
                        android:orientation="vertical">
                    <Spinner
                            android:id="@+id/spiner1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                    </Spinner>

                    <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            style="@style/TextInputLayoutTheme">
                        <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_umroh_cari_tipe"
                                android:hint="@string/et_umroh_cari_tipe"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:drawablePadding="10dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                            style="@style/TextInputLayoutTheme"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp">
                        <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_umroh_cari_tgl_berangkat"
                                android:hint="@string/et_umroh_cari_tgl_berangkat"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:drawableLeft="@drawable/ic_umroh_cal"
                                android:drawablePadding="10dp" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            style="@style/TextInputLayoutTheme">
                        <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_umroh_cari_jamaah"
                                android:hint="@string/et_umroh_cari_jamaah"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:drawableLeft="@drawable/ic_umroh_jamaah"
                                android:drawablePadding="10dp" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <Button
                            android:id="@+id/btn_umroh_cari"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="@string/btn_umroh_cari"
                            android:theme="@style/ButtonUmroh"
                            android:background="@color/colorPrimary"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </FrameLayout>
    </LinearLayout>


</RelativeLayout>