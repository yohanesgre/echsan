<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:paddingEnd="16dp"
                android:paddingStart="6dp"
                android:background="@color/white"
                app:contentInsetStartWithNavigation="0dp"
                app:navigationIcon="@drawable/ic_filter_umroh"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                android:elevation="0dp">
            <TextView
                    style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                    android:id="@+id/toolbar_title"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </androidx.appcompat.widget.Toolbar>
    <TextView
            android:id="@+id/tv_filter_harga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_umroh_paket_filter_harga"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintLeft_toLeftOf="parent"/>
    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_filter_harga_min"
            android:layout_width="wrap_content"
            android:minWidth="150dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_filter_harga"
            app:layout_constraintLeft_toLeftOf="@id/tv_filter_harga"
            android:hint="@string/et_umroh_paket_filter_harga_min"
            android:gravity="bottom|left">
            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_filter_harga_min"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:background="@color/white"
                    android:textAlignment="textStart"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_filter_harga_max"
            android:layout_width="wrap_content"
            android:minWidth="150dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_filter_harga"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="20dp"
            android:hint="@string/et_umroh_paket_filter_harga_max"
            android:gravity="bottom|right">
        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_filter_harga_max"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:inputType="number"
                android:textAlignment="textEnd"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.jaygoo.widget.RangeSeekBar
            android:id="@+id/rangeSeekbar_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:rsb_mode="range"
            app:rsb_gravity="bottom"
            app:rsb_progress_color="@color/colorPrimary"
            app:rsb_indicator_show_mode="showWhenTouch"
            app:rsb_indicator_width="wrap_content"
            app:rsb_indicator_height="wrap_content"
            app:rsb_indicator_margin="5dp"
            app:rsb_indicator_padding_left="5dp"
            app:rsb_indicator_padding_right="5dp"
            app:rsb_indicator_padding_top="5dp"
            app:rsb_indicator_padding_bottom="5dp"
            app:rsb_indicator_background_color="@color/colorPrimary"
            app:rsb_indicator_text_size="20sp"
            app:rsb_tick_mark_mode="number"
            app:layout_constraintTop_toBottomOf="@id/input_layout_filter_harga_min"
            app:layout_constraintRight_toRightOf="@id/input_layout_filter_harga_max"
            app:layout_constraintLeft_toLeftOf="@id/input_layout_filter_harga_min" />
    <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/greyDark"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/rangeSeekbar_filter"/>
    <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/tv_filter_durasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_filter_durasi"
            app:layout_constraintTop_toBottomOf="@id/line1"
            app:layout_constraintLeft_toLeftOf="@id/tv_filter_harga" />
    <FrameLayout
            android:layout_marginTop="10dp"
            android:id="@+id/layout_filter_durasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_filter_durasi"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_filter_durasi"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
    </FrameLayout>
    <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/greyDark"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/layout_filter_durasi"/>
    <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/tv_filter_lokasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_filter_durasi"
            app:layout_constraintTop_toBottomOf="@id/line2"
            app:layout_constraintLeft_toLeftOf="@id/tv_filter_harga" />
    <FrameLayout
            android:layout_marginTop="10dp"
            android:id="@+id/layout_filter_lokasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_filter_lokasi"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_filter_lokasi"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
    </FrameLayout>
    <View
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/greyDark"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/layout_filter_lokasi"/>
</androidx.constraintlayout.widget.ConstraintLayout>