<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/segment_layout"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/colorPrimary">

    <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/bg_logo"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ECHSAN"
            android:textStyle="bold"
            android:textSize="50sp"
            android:layout_marginTop="-30dp"
            android:textColor="@color/white"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The Spirit of Ichsan"
            android:layout_marginTop="-10dp"
            android:textStyle="bold|italic"
            android:textSize="17sp"
            android:textColor="@color/greenLight"/>

    <LinearLayout
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:orientation="horizontal" >


        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:paddingRight="5dp"
                android:paddingLeft="5dp">

            <TextView
                    android:id="@+id/txtValuePercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1dp"
                    android:layout_centerInParent="true"
                    android:textColor="@color/colorPrimary"
                    android:layout_above="@+id/circle_progress_bar"
                    android:layout_toLeftOf="@+id/txtPercentage"/>
            <TextView
                    android:id="@+id/txtPercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="%"
                    android:layout_centerInParent="true"
                    android:textColor="@color/colorPrimary"
                    android:layout_above="@+id/circle_progress_bar"
            />

            <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:indeterminate="false"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="70dp"
                    android:max="100"
                    android:progress="100"
                    android:rotation="0" />

            <ProgressBar
                    android:id="@+id/circle_progress_bar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:indeterminate="false"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="70dp"
                    android:max="100"
                    android:rotation="0" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
