<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:gravity="center_horizontal">

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_login_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:gravity="center">
        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_et_login_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:inputType="textAutoComplete"
                android:minWidth="350dp"
                android:drawableLeft="@drawable/ic_username"
                app:backgroundTint= "@color/colorPrimary" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_login_mail2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:layout_below="@id/input_layout_login_mail">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_et_login_mail2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress|textAutoComplete"
                android:minWidth="350dp"
                android:drawableLeft="@drawable/ic_mail"
                app:backgroundTint= "@color/colorPrimary" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_login_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:layout_below="@id/input_layout_login_mail2">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_et_login_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_pass"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress|textNoSuggestions|textVisiblePassword"
                android:minWidth="350dp"
                app:backgroundTint="@color/colorPrimary" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/input_layout_login_pass"
            android:layout_marginTop="50dp"
            android:minWidth="350dp"
            android:text="Sign Up"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:layout_centerHorizontal="true"
            app:cornerRadius="10dp"/>

    <TableRow
            android:id="@+id/row_login"
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/btn_login">
        <ImageView
                android:id="@+id/btn_login_google"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"/>
        <ImageView
                android:id="@+id/btn_login_facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"/>
    </TableRow>
    <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an acoount?"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/btn_signup_login">
    </androidx.appcompat.widget.AppCompatTextView>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_signup_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="50dp"
            android:text="@string/btn_signin"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            app:cornerRadius="10dp"
            android:layout_centerHorizontal="true"/>
</RelativeLayout>