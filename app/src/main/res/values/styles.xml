<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/colorOnError</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="toolbarStyle">@style/ToolbarTheme</item>
        <item name="bottomNavigationStyle">@style/BottomNavBarTheme</item>
        <!--<item name="android:fontFamily">@font/acarisans_font_family</item>-->
    </style>

    <style name="AppTheme.Slide">
        <item name="android:windowEnterAnimation">@anim/anim_slide_up</item>
        <item name="android:windowExitAnimation">@anim/anim_slide_down</item>
    </style>

    <style name="FullScreenDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="actionMenuTextColor">@color/colorAccent</item>
    </style>

    <style name="ButtonStyle" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorSecondary</item>
    </style>

    <style name="ToolbarTheme" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="titleTextColor">@color/colorOnPrimary</item>
    </style>

    <style name="BottomNavBarTheme" parent="Widget.MaterialComponents.BottomNavigationView"/>

    <style name="TextInputLayoutTheme" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <!--<item name="hintTextAppearance">@style/HintText</item>
        <item name="errorTextAppearance">@style/ErrorText</item>-->
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="colorControlNormal">@color/colorSecondary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="boxBackgroundColor">@color/white</item>
    </style>

    <style name="TextInputLayoutDropDownTheme" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <!--<item name="hintTextAppearance">@style/HintText</item>
        <item name="errorTextAppearance">@style/ErrorText</item>-->
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="colorControlNormal">@color/colorSecondary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="boxBackgroundColor">@color/white</item>
    </style>

    <style name="TextInputLayoutDropDownTheme.DropdownItem">
        <!-- sets the background of a single item, but background of dropdown still shows -->
        <!-- <item name="android:background">@color/dialog_bg_color</item>-->
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ErrorText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="HintText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ButtonUmroh" parent="AppTheme">
        <item name="buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorSecondary</item>
    </style>

    <style name="CheckBoxStyle" parent="AppTheme">
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>
</resources>
